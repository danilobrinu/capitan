<div class="row">
  <div class="col-sm-5 col-xs-4">
    <%= image_tag @user.avatar.url(:student_dashboard),
    alt: "coder", class: "img-circle img-responsive student-status-good" %>
  </div>
  <div class="col-sm-7 col-xs-8 pl-7">
    <h3 class="mv-0 book name">
      <%= @user.full_name %>
    </h3>
    <p><%= age(@user.profile.birth_date) if @user.profile.birth_date %></p>
    <p class="light lh-profile description">
      <%= @user.branch.name %>
    </p>
    <p class="mb-14-xs mb-0 lh-profile codigo">
      <%= @user.code %>
    </p>
    <a class="arrows-xs hidden-lg hidden-md hidden-sm" role="button" data-toggle="collapse" href="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
      <%= image_tag 'arrow-down.png', class: "icon-arrow arrow-down text-center arrow-show", width: "24" %>
      <%= image_tag 'arrow-up.png', class: "icon-arrow arrow-up text-center", width: "24" %>
    </a>
  </div>
</div>
